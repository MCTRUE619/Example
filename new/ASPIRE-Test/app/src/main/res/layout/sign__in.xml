<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:elevation="100dp"
        android:clickable="true"
        android:onClick="showPassword"
        app:layout_constraintBottom_toBottomOf="@+id/Password"
        app:layout_constraintEnd_toEndOf="@+id/Password"
        app:layout_constraintTop_toTopOf="@+id/Password"
        app:srcCompat="@drawable/eye_icon"/>

    <EditText
        android:id="@+id/Login"
        android:layout_width="327dp"
        android:layout_height="53dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="64dp"
        android:background="@drawable/rectangle"
        android:ems="10"
        android:inputType="textPersonName"
        android:letterSpacing="0.05"
        android:paddingLeft="30dp"
        android:text=""
        android:textColor="#3E333F"
        android:textFontWeight="400"
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="327dp"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rectangle"
        android:elevation="5dp"
        android:tag="hide"
        android:fontFamily="sans-serif"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="71dp"
        android:layout_marginRight="230dp"
        android:fontFamily="sans-serif"
        android:text="Войти через соц сети"
        android:textColor="@color/slider2"
        android:textFontWeight="500"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginRight="-1dp"
        android:clickable="true"
        android:onClick="myFun"
        android:text="Забыли пароль?"
        android:textColor="@color/slider2"
        android:textFontWeight="500"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/Password"
        app:layout_constraintTop_toBottomOf="@+id/Password" />



    <Button
        android:id="@+id/button2"
        android:layout_width="314dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="29dp"
        android:background="@drawable/button_circle"
        android:fontFamily="sans-serif"
        android:onClick="openMain"
        android:text="Войти в свой аккаунт"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="14dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.041"
        android:lineHeight="22px"
        android:text="Вход в ресторан"
        android:textAlignment="center"
        android:textColor="@color/slider"
        android:textFontWeight="600"
        android:textSize="22dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="44dp"
        android:layout_height="11dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="57dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:paddingLeft="7dp"
        android:text="Логин"
        android:textColor="@color/slider2"
        android:textFontWeight="400"
        android:textSize="10dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/Login"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16.38dp"
            android:layout_marginTop="19.78dp"
            android:clickable="true"
            android:onClick="BackSign"
            app:srcCompat="@drawable/arrow2"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:srcCompat="@drawable/aspire_logo" />
    </RelativeLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        app:alignContent="space_around"
        app:alignItems="center"
        app:justifyContent="space_around"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="27dp"
            android:layout_height="23dp"
            android:clickable="true"
            android:onClick="myFun1"
            app:srcCompat="@drawable/telegram_icon" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="27dp"
            android:clickable="true"
            android:onClick="myFun2"
            app:srcCompat="@drawable/viber_icon" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:onClick="myFun3"
            app:srcCompat="@drawable/google_icon" />
    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:onClick="openRegestration"
        android:text="Еще не создавали аккаунт?"
        android:textColor="@color/slider2"
        android:textFontWeight="500"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flexi" />

</androidx.constraintlayout.widget.ConstraintLayout>